{
  "name": "atlassian-mcp",
  "version": "1.0.0",
  "description": "MCP server for Atlassian services (Jira, Confluence) with Git operations",
  "main": "index.js",
  "scripts": {
    "server:build": "tsc",
    "server:build:watch": "tsc --watch",
    "server:dev": "tsx src/server.ts",
    "server:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector tsx src/server.ts",
    "client:dev": "tsx src/client.ts"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.14.3",
    "@types/node": "^24.0.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0",
    "axios": "^1.7.7",
    "dotenv": "^16.5.0",
    "form-data": "^4.0.4",
    "zod": "^3.25.67"
  },
  "keywords": [
    "atlassian",
    "jira",
    "confluence",
    "mcp"
  ],
  "author": "BlackRose484",
  "license": "ISC"
}
